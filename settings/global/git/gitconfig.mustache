[alias]
	ci = commit
	cl = clean --f
	co = checkout
	nb = checkout -b $0
	db = branch -D $0
	nf = checkout -b feature/$0
	pf = pull --rebase $0 $1
	mt = mergetool
	fa = fetch --all
	rh = reset --hard
	rb = reset --hard $0/$1
	st = status
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	{{{ alias }}}

[merge]
    tool = diffmerge
[diff]
	tool = diffmerge

[mergetool "diffmerge"]
	keepBackup = false
	trustExitCode = true
	cmd = diffmerge -merge -result="$PWD/$MERGED" "$PWD/$LOCAL" "$PWD/$BASE" "$PWD/$REMOTE"

[difftool "diffmerge"]
	cmd = cmd = diffmerge "$LOCAL" "$REMOTE"

[push]
	default = simple

[branch]
	autosetuprebase = always

[core]
	excludesfile = {{ gitignore }}
