[user]
	name = {{name}}
	email = {{email}}

[alias]
	cl = clean --f
	ci = !sh -c 'git commit -am "$0"'
	co = checkout
	nb = !sh -c 'git checkout -b $0'
	db = !sh -c 'git branch -D $0'
	nf = !sh -c 'git checkout -b feautre/$0'
	pf = !sh -c 'git pull --rebase $0 feature/$1'
	mt = mergetool
	fa = fetch --all
	rh = reset --hard
	rb = !sh -c 'git reset --hard $0/$1'
	rf = !sh -c 'git reset --hard $0/feature/$1'
	st = status
	gui = !sh -c '/usr/local/git/libexec/git-core/git-gui'
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[merge]
    tool = diffmerge
[diff]
	tool = diffmerge

[mergetool "diffmerge"]
	keepBackup = false
	trustExitCode = true
	cmd = diffmerge -merge -result="$PWD/$MERGED" "$PWD/$LOCAL" "$PWD/$BASE" "$PWD/$REMOTE"

[difftool "diffmerge"]
	cmd = diffmerge "$LOCAL" "$REMOTE"

[push]
	default = simple

[branch]
	autosetuprebase = always

[core]
	excludesfile = ~/.gitignore
	autocrlf = input

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
